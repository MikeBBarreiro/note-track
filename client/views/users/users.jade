h1 {{mode | uppercase}}

.row
   .small-12.columns
        form
            .row
               .small-6.columns
                  label(for='username') Username
                  input#username(type='text', name='username', ng-model='user.username', autofocus)
               .small-6.columns
            .row
               .small-6.columns
                  label(for='password') Password
                  input#password(type='password', name='password', ng-model='user.password')
               .small-6.columns
           .row
               .small-6.columns
                  label(for='photo') URL photo
                   input.form-control#photo(ng-pattern='/^http/', ng-model='user.photo', type='text', name='photo')
               .small-6.columns
                   button(ng-click='submit()') Submit
